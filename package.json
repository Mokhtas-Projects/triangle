{
	"name": "nextjs-sprout",
	"version": "0.1.0",
	"description": "The ByteRunners NextJS Sprout",
	"author": {
		"name": "ByteRunners",
		"email": "runner@ByteRunners.com",
		"url": "https://github.com/ByteRunners"
	},
	"license": "MIT",
	"homepage": "https://ByteRunners.run",
	"repository": {
		"type": "git",
		"url": "https://github.com/ByteRunners/Next.js-Sprout",
		"directory": "Next.js-Sprout",
		"branch": "main",
		"commit": "HEAD",
		"host": "github.com"
	},
	"bugs": {},
	"private": true,
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=6.0.0",
		"npm": "please-use-pnpm-instead",
		"yarn": "please-use-pnpm-instead"
	},
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"eslint": "eslint --cache --ext js,jsx,ts,tsx --report-unused-disable-directives --max-warnings 0 --ignore-path .gitignore",
		"lint": "next lint",
		"lint:fix": "eslint --cache --fix --ext .js,.jsx,.ts,.tsx",
		"lint:css": "stylelint --cache \"**/*.{css,scss}\"",
		"lint:css:fix": "stylelint --cache \"**/*.{css,scss}\" --fix",
		"prettier": "prettier --ignore-path .gitignore --write --check \"**/*.+(js|jsx|ts|tsx|css|scss|json)\"",
		"format": "prettier . --check",
		"format:fix": "prettier . --write",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"cz": "sh .husky/pre-commit && git cz --no-verify",
		"prepare": "husky install",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"dependencies": {
		"next": "14.0.3",
		"react": "^18",
		"react-dom": "^18"
	},
	"devDependencies": {
		"@commitlint/cli": "^18.4.2",
		"@commitlint/config-conventional": "^18.4.2",
		"@storybook/addon-essentials": "7.5.3",
		"@storybook/addon-interactions": "7.5.3",
		"@storybook/addon-links": "7.5.3",
		"@storybook/addon-onboarding": "1.0.8",
		"@storybook/blocks": "7.5.3",
		"@storybook/nextjs": "7.5.3",
		"@storybook/react": "7.5.3",
		"@storybook/testing-library": "0.2.2",
		"@testing-library/jest-dom": "^6.1.4",
		"@testing-library/react": "^14.1.2",
		"@testing-library/user-event": "^14.5.1",
		"@types/jest": "^29.5.10",
		"@types/node": "^20",
		"@types/react": "^18.2.37",
		"@types/react-dom": "^18",
		"@typescript-eslint/eslint-plugin": "^6.11.0",
		"@typescript-eslint/parser": "^6.11.0",
		"autoprefixer": "^10.4.16",
		"cz-git": "^1.7.1",
		"eslint": "^8.54.0",
		"eslint-config-next": "14.0.3",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-import": "^2.29.0",
		"eslint-plugin-jest-dom": "^5.1.0",
		"eslint-plugin-jsx-a11y": "^6.8.0",
		"eslint-plugin-prettier": "^5.0.1",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-simple-import-sort": "^10.0.0",
		"eslint-plugin-storybook": "^0.6.15",
		"eslint-plugin-tailwindcss": "^3.13.0",
		"eslint-plugin-testing-library": "^6.1.2",
		"husky": "^8.0.3",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"postcss": "^8",
		"postcss-syntax": "^0.36.2",
		"prettier": "^3.1.0",
		"prettier-plugin-tailwindcss": "^0.5.7",
		"storybook": "7.5.3",
		"stylelint": "^15.10.0",
		"stylelint-config-idiomatic-order": "^9.0.0",
		"stylelint-config-standard": "^34.0.0",
		"stylelint-config-styled-components": "^0.1.1",
		"tailwindcss": "^3.3.5",
		"ts-jest": "^29.1.1",
		"typescript": "^5",
		"zod": "^3.22.4"
	},
	"keywords": [
		"react",
		"nextjs",
		"typescript",
		"tailwindcss",
		"next",
		"template",
		"sprout",
		"byterunners",
		"pnpm"
	],
	"packageManager": "pnpm@8.10.5",
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-git"
		}
	},
	"lint-staged": {
		"**/*.{js,jsx,ts,tsx}": [
			"pnpm eslint"
		],
		"**/*.{css,scss}": [
			"stylelint --cache --fix && pnpm prettier"
		]
	}
}
